{
  "name": "agent-qa",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Framework-based AI agent testing with convention over configuration",
  "repository": {
    "type": "git",
    "url": "https://github.com/AgentDeskAI/agent-qa.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "test:coverage": "pnpm -r test:coverage",
    "type-check": "pnpm -r type-check",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "check": "pnpm lint && pnpm type-check",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && pnpm test && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^20.19.23",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.21.0",
    "globals": "^16.0.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.30.1",
    "vitest": "^4.0.15"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20"
  }
}
